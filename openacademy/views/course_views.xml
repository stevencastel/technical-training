<?xml version="1.0" encoding="UTF-8"?>
<odoo>
<!-- Classes -->
    <record id="di_view_classe_tree" model="ir.ui.view">
        <field name="name">di.view.classe.tree</field>
        <field name="model">openacademy.course</field>
        <field name="arch" type="xml">
            <tree string="Classes">
                <field name="name" string="Nom"/>
                <field name="description" string="Description"/>
                <field name="responsible_id" string="Responsible"/>                
                <field name="level" string="Difficulty Level"/>  
                <field name="session_ids" string="Sessions"/>  
                <field name="session_count" string="Session Count"/>                  
            </tree>
        </field>
    </record>
      <record id="di_view_classe_form" model="ir.ui.view">
        <field name="name">di.view.classe.form</field>
        <field name="model">openacademy.course</field>
        <field name="arch" type="xml">
            <form string="Classe">   
                <group>             
                    <field name="name" string="Nom"/>
                    <field name="description" string="Description"/>
                    <field name="responsible_id" string="Responsible"/>                
                    <field name="level" string="Difficulty Level"/>  
                    <field name="session_ids" string="Sessions"/>  
                    <field name="session_count" string="Session Count"/>  
                </group>                            
            </form>
        </field>
    </record>
    <record id="di_action_classes" model="ir.actions.act_window">
        <field name="name">Classes</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">openacademy.course</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Aide
            </p>
            <p>
                Cliquer pour g√©rer les classes
            </p>
        </field>
    </record>
    
    
    <menuitem id="menu_academy" name="Academy" sequence="309" web_icon="formation,static/description/icon.png"/>
    <!-- **Menu Academy -->
    <menuitem id="menu_academy_classes" name="Courses" sequence="10" parent="menu_academy"  action="openacademy.di_action_classes"/>    
</odoo>
